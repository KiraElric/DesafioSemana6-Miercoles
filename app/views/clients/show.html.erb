<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @client.name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @client.phone %>
</p>

<p>
  <strong>Email:</strong>
  <%= @client.email %>
</p>

 <table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Max. Weight</th>
      <th>Max. Height</th>
    </tr>
  </thead>
  <tbody>
    <% @client.pets.each do |pet| %>
    <tr>
      <td><%= pet.name %></td>
      <td><%= pet.max_weight %></td>
      <td><%= pet.max_height %></td>
    </tr>
    <% end %>
  </tbody>
</table> 

